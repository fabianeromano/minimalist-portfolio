---
import Badge from "./Badge.astro";
interface Props {
  name: string;
  position: string;
  startDate: string;
  endDate: string;
  summary: string;
}
const { name, position, startDate, endDate, summary } = Astro.props;
---

<div class="flex flex-col justify-start h-full">
  <div class="mb-3">
    <span class="block text-xl font-semibold mt-3">{name}</span>
    <p class="block text-base">
      {position}&nbsp;<Badge
        ><span class="text-sm">{startDate}-{endDate}</span></Badge
      >
    </p>
  </div>
  <p class="text-white">
    {summary}
  </p>
</div>
