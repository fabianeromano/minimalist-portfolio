---
import Badge from "./Badge.astro";
interface Props {
  institution: string;
  studyType: string;
  startDate: string;
  endDate: string;
  description: string;
}
const { institution, studyType, startDate, endDate, description } = Astro.props;
---

<div class="flex flex-col justify-start h-full">
  <div class="mb-3">
    <span class="block text-xl font-semibold mt-3">{institution}</span>
    <p class="block text-base mb-2">
      {studyType}
    </p>
    <Badge>
      {startDate}&nbsp;|&nbsp;{endDate}
    </Badge>
  </div>
  <p class="text-white">
    {description}
  </p>
</div>
