---
import { basics } from "@cv";
import Banner from "@/components/Banner.astro";
const { label, name } = basics;
---

<section class="border-white/20 border-b">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <div class="mx-auto">
      <div class="mx-auto gradient-grid px-8 py-12 text-white">
        <h1 class="font-black uppercase text-3xl lg:text-7xl">
          {label}&nbsp;<span class="text-red-400">
            {name}
          </span>
        </h1>
        <p class="text-3xl">Check out my projects and skills.</p>
      </div>
    </div>
  </div>
  <Banner />
</section>
