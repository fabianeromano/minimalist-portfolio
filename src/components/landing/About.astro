---
import { basics } from "@cv";
import Stat from "@/components/common/Stat.astro";
const { name, image, stats } = basics;
---

<section class="border-white/20 border-b">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <div class="text-white grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <div class="p-4">
        <div>
          <span class="text-white font-bold text-base md:text-xl"
            >Biography</span
          >
        </div>
        <p class="mt-3 text-sm md:text-base">
          Hi, I'm Fabian Romano, a full stack web developer with over 2 years of
          experience. I specialize in HTML, CSS, JavaScript, React, MongoDB, and
          Node.js. My focus is on creating functional and user-centric digital
          experiences. I stay updated with the latest web technology trends and
          deliver projects efficiently.
        </p>
      </div>
      <div class="border-l border-white/20 mx-auto">
        <figure class="w-full aspect-square overflow-hidden">
          <img src={image} alt={name} />
        </figure>
      </div>
      <div class="grid md:col-span-3 lg:col-span-1 grid-cols-3 lg:grid-cols-1">
        {
          stats?.map((stat) => (
            <Stat amount={stat.amount} description={stat.description} />
          ))
        }
      </div>
    </div>
  </div>
</section>
