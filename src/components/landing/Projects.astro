---
import { projects } from "@cv";

import Card from "@/components/common/Card.astro";
---

<section class="border-b border-white/20">
  <div
    class="mx-auto max-w-7xl border-x border-white/20 px-8 py-12 gradient-grid">
    <div class="mx-auto">
      <h3 class="text-3xl font-black text-white uppercase">
        DESIGNED AND DEVELOPED WEBSITES
      </h3>
    </div>
  </div>
</section>
<section class="border-b border-white/20">
  <div class="mx-auto max-w-7xl grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5">
    {
      projects.map((project, index) => (
        <Card
          project={index + 1}
          demo={project.demo}
          code={project.code}
          icons={project.technology}
        />
      ))
    }
  </div>
</section>
